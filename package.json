{
    "name": "ivorypay-fullstack-test-backend",
    "version": "1.0.0",
    "description": "IvoryPay FullStack Test - Wallet App Backend",
    "main": "src/index.ts",
    "scripts": {
        "start": "yarn build && pm2 start ecosystem.config.json --no-daemon",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "rm -rf build && tsc -p .",
        "typeorm": "typeorm-ts-node-commonjs",
        "migrate": "yarn build && yarn typeorm migration:generate -d src/config/data-source.ts src/database/migrations/added-user-entity",
        "db:seed": "yarn build && yarn ts-node src/database/seeds/Admin.ts",
        "db:sync": "yarn build && yarn typeorm schema:sync -- -d src/config/data-source.ts",
        "db:drop": "yarn build && yarn typeorm schema:drop -- -d src/config/data-source.ts",
        "db:setup": "yarn db:drop && yarn db:sync && yarn db:seed",
        "dbtest:sync": "yarn build && yarn typeorm schema:sync -- -d src/config/testDBSource.ts",
        "dbtest:drop": "yarn build && yarn typeorm schema:drop -- -d src/config/testDBSource.ts",
        "dbtest:seed": "yarn build && yarn ts-node src/database/seeds/AdminTest.ts",
        "jest": "cross-env NODE_ENV=test jest -i --colors --verbose --detectOpenHandles",
        "test": "yarn dbtest:drop && yarn dbtest:sync && yarn dbtest:seed && yarn jest",
        "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
        "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
        "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
        "docker:dev-db:start": "docker-compose -f docker-compose.only-db-dev.yml up -d",
        "docker:dev-db:stop": "docker-compose -f docker-compose.only-db-dev.yml down"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/davydocsurg/ivorypay-fullstack-test-backend.git"
    },
    "keywords": [
        "node",
        "nodejs",
        "express",
        "typeorm",
        "typescript",
        "rest",
        "api",
        "postgresql"
    ],
    "author": "davydocsurg",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/davydocsurg/ivorypay-fullstack-test-backend/issues"
    },
    "homepage": "https://github.com/davydocsurg/ivorypay-fullstack-test-backend#readme",
    "engines": {
        "node": ">=18.12.0"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "config": "^3.3.9",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "crypto": "^1.0.1",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "http-status": "^1.6.2",
        "jest": "^29.6.3",
        "joi": "^17.9.2",
        "js-big-decimal": "^2.0.4",
        "jsonwebtoken": "^9.0.1",
        "moment": "^2.29.4",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.4",
        "nodemailer-sendinblue-transport": "^2.0.1",
        "pg": "^8.11.3",
        "pm2": "^5.3.0",
        "reflect-metadata": "^0.1.13",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typeorm": "^0.3.17",
        "uuid": "^9.0.0",
        "winston": "^3.10.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.0.2",
        "@jest/globals": "^29.6.3",
        "@types/bcryptjs": "^2.4.2",
        "@types/config": "^3.3.0",
        "@types/cors": "^2.8.13",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.17",
        "@types/http-status": "^1.1.2",
        "@types/jest": "^29.5.4",
        "@types/joi": "^17.2.3",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/moment": "^2.13.0",
        "@types/morgan": "^1.9.5",
        "@types/node": "^20.5.6",
        "@types/nodemailer": "^6.4.9",
        "@types/pg": "^8.10.2",
        "@types/reflect-metadata": "^0.1.0",
        "@types/supertest": "^2.0.12",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^9.0.2",
        "@types/winston": "^2.4.4",
        "swagger-jsdoc": "^6.2.5",
        "swagger-ui-express": "^4.6.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.6"
    }
}
