{
    "name": "ivorypay-fullstack-test-backend",
    "version": "1.0.0",
    "description": "IvoryPay FullStack Test - Wallet App Backend",
    "main": "src/index.ts",
    "scripts": {
        "test": "jest -i --watch",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "rm -rf build && tsc -p .",
        "typeorm": "typeorm-ts-node-commonjs",
        "migrate": "yarn build && yarn typeorm migration:generate -d src/config/data-source.ts src/database/migrations/added-user-entity",
        "seed": "yarn build && yarn ts-node src/database/seeds/Admin.ts",
        "db:drop": "yarn build && yarn typeorm schema:drop -- -d src/config/data-source.ts",
        "db:sync": "yarn build && yarn typeorm schema:sync -- -d src/config/data-source.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/davydocsurg/ivorypay-fullstack-test-backend.git"
    },
    "keywords": [
        "node",
        "nodejs",
        "express",
        "typeorm",
        "typescript",
        "rest",
        "api",
        "postgresql"
    ],
    "author": "davydocsurg",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/davydocsurg/ivorypay-fullstack-test-backend/issues"
    },
    "homepage": "https://github.com/davydocsurg/ivorypay-fullstack-test-backend#readme",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "config": "^3.3.9",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "http-status": "^1.6.2",
        "jest": "^29.6.3",
        "joi": "^17.9.2",
        "jsonwebtoken": "^9.0.1",
        "moment": "^2.29.4",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.4",
        "nodemailer-sendinblue-transport": "^2.0.1",
        "pg": "^8.11.3",
        "reflect-metadata": "^0.1.13",
        "supertest": "^6.3.3",
        "swagger-jsdoc": "^6.2.8",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typeorm": "^0.3.17",
        "uuid": "^9.0.0",
        "winston": "^3.10.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/config": "^3.3.0",
        "@types/cors": "^2.8.13",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.17",
        "@types/http-status": "^1.1.2",
        "@types/jest": "^29.5.3",
        "@types/joi": "^17.2.3",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/moment": "^2.13.0",
        "@types/morgan": "^1.9.4",
        "@types/nodemailer": "^6.4.9",
        "@types/pg": "^8.10.2",
        "@types/reflect-metadata": "^0.1.0",
        "@types/supertest": "^2.0.12",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/uuid": "^9.0.2",
        "@types/winston": "^2.4.4",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.6"
    }
}
